{{page-title "Register"}}
<div class="mt-5">
  <h3>Signup</h3>
  <form class="mt-3" {{on "submit" this.saveUser}}>
    <label class="form-label">Email</label>
    <input type="email" class="form-control" name="email" placeholder="Enter email" value={{this.email}} {{on "input" this.onChange}} required />
    <label class="form-label mt-2">Password</label>
    <input name='password' type="password" class="form-control" placeholder="Enter Password" value={{this.password}} {{on "input" this.onChange}} required/>
    <button class="btn btn-primary mt-2" type="submit">Submit</button>
    {{#if this.success}}
      <p class="text-success mt-2">{{this.success}}</p>
    {{/if}}
  </form>
</div>
